<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TODO_list"
             x:Class="TODO_list.MainPage"
             Title="СПИСОК ПОКУПОК">
    <ContentPage.BindingContext>
        <local:MainViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Grid ColumnDefinitions="*,250,Auto,Auto"
                  ColumnSpacing="20">
                <Entry Grid.Column="0" HorizontalOptions="Fill" MaxLength="100" 
                        Placeholder="Товар" Text ="{Binding Description}"/>
                <Entry Grid.Column="1" HorizontalOptions="Fill" MaxLength="20" 
                        Placeholder="Количество" Text ="{Binding Quantity}"/>
                <Picker Grid.Column="2" ItemsSource="{Binding AvailableUnits}" SelectedItem="{Binding Unit, Mode=TwoWay}">
                </Picker>
                <Button Grid.Column="3" HorizontalOptions="End" Text="+"
                    Command="{Binding AddCommand}"/>
            </Grid>


            <ListView ItemsSource="{Binding Tasks}"
                      VerticalScrollBarVisibility="Never"
                      x:Name="TasksListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnDefinitions="*,Auto"
                                  Margin="20">
                                <HorizontalStackLayout
                                    Grid.Column="0"
                                    Spacing="20"
                                    HorizontalOptions="Start">
                                    <CheckBox VerticalOptions="Center" IsChecked="{Binding Path=IsCompleted, Mode=TwoWay}"/>
                                    
                                    <Label VerticalOptions="Center"  Text="{Binding Description}" 
                                           TextDecorations="{Binding LabelStrikethrough}"
                                           />
                                    <Label VerticalOptions="Center"  Text="{Binding Quantity}" 
                                           
                                           />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout
                                    Grid.Column="1"
                                    Spacing="20"
                                    HorizontalOptions="End">
                                    
                                    <Button VerticalOptions="Center" Text="🗑" 
                                            Command="{Binding 
                                                Source={RelativeSource AncestorType={x:Type ContentPage}},
                                                Path=BindingContext.RemoveCommand}"
                                            CommandParameter="{Binding .}"/>
                                    
                                </HorizontalStackLayout>
                                
                            </Grid>
                            
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
